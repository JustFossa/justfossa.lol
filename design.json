{
	"projectName": "Devraj Chatribin Portfolio",
	"designSystem": {
		"colors": {
			"primary": {
				"background": "#0a0a0a",
				"text": "#ffffff",
				"accent": "#ff6b35",
				"muted": "#666666",
				"card": "#1a1a1a",
				"border": "#333333"
			},
			"semantic": {
				"success": "#10b981",
				"warning": "#f59e0b",
				"error": "#ef4444",
				"info": "#3b82f6"
			}
		},
		"typography": {
			"fonts": {
				"primary": "Inter, system-ui, sans-serif",
				"secondary": "SF Pro Display, sans-serif",
				"mono": "SF Mono, Consolas, monospace"
			},
			"scale": {
				"xs": "0.75rem",
				"sm": "0.875rem",
				"base": "1rem",
				"lg": "1.125rem",
				"xl": "1.25rem",
				"2xl": "1.5rem",
				"3xl": "1.875rem",
				"4xl": "2.25rem",
				"5xl": "3rem",
				"6xl": "3.75rem",
				"7xl": "4.5rem",
				"8xl": "6rem"
			},
			"weights": {
				"light": 300,
				"regular": 400,
				"medium": 500,
				"semibold": 600,
				"bold": 700,
				"extrabold": 800
			}
		},
		"spacing": {
			"xs": "0.25rem",
			"sm": "0.5rem",
			"md": "1rem",
			"lg": "1.5rem",
			"xl": "2rem",
			"2xl": "3rem",
			"3xl": "4rem",
			"4xl": "6rem",
			"5xl": "8rem"
		},
		"borderRadius": {
			"none": "0",
			"sm": "0.125rem",
			"md": "0.375rem",
			"lg": "0.5rem",
			"xl": "0.75rem",
			"2xl": "1rem",
			"full": "9999px"
		},
		"shadows": {
			"sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
			"md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
			"lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
			"xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
			"glow": "0 0 20px rgba(255, 107, 53, 0.3)"
		}
	},
	"components": {
		"navigation": {
			"type": "minimal-horizontal",
			"position": "fixed-top",
			"style": "transparent-backdrop",
			"items": ["Home", "About", "Projects", "Contact"],
			"logo": {
				"type": "text",
				"content": "DC",
				"style": "monospace-bold"
			},
			"mobileMenu": {
				"type": "slide-out",
				"direction": "right"
			}
		},
		"hero": {
			"layout": "full-screen-centered",
			"textAlignment": "left",
			"elements": {
				"greeting": {
					"text": "Hey! It's me [Name]",
					"style": "casual-medium"
				},
				"headline": {
					"text": "Crafting purpose driven experiences that inspire & engage",
					"style": "large-bold-gradient"
				},
				"description": {
					"text": "Professional description highlighting global work and expertise",
					"style": "muted-medium"
				},
				"skillsMarquee": {
					"type": "infinite-scroll",
					"items": [
						"Websites",
						"Designing",
						"Graphics",
						"Animations",
						"Community",
						"Development",
						"Mentor"
					],
					"direction": "horizontal",
					"speed": "slow"
				}
			}
		},
		"aboutSection": {
			"layout": "split-screen",
			"imagePosition": "right",
			"textAlignment": "left",
			"elements": {
				"title": {
					"text": "About Me",
					"style": "section-header"
				},
				"description": {
					"style": "glitched-text-effect",
					"content": "Multi-line description with character doubling effect"
				}
			}
		},
		"projectsSection": {
			"layout": "grid-masonry",
			"gridCols": {
				"mobile": 1,
				"tablet": 2,
				"desktop": 3
			},
			"elements": {
				"sectionHeader": {
					"title": "My Work",
					"subtitle": "Selected Projects",
					"description": "Curated selection showcasing expertise",
					"cta": {
						"text": "View All Projects",
						"style": "link-underline"
					}
				},
				"projectCard": {
					"layout": "image-overlay",
					"hoverEffect": "scale-overlay",
					"elements": {
						"image": "project-thumbnail",
						"title": "project-name",
						"category": "project-type",
						"year": "project-year"
					}
				}
			}
		},
		"expertiseSection": {
			"layout": "three-column-grid",
			"elements": {
				"sectionHeader": {
					"title": "Speciality",
					"subtitle": "Areas of Expertise"
				},
				"expertiseCard": {
					"layout": "image-title-only",
					"style": "minimal-clean",
					"hoverEffect": "subtle-scale",
					"categories": ["Development", "UI/UX Design", "Branding"]
				}
			}
		},
		"testimonialsSection": {
			"layout": "grid-carousel",
			"gridCols": {
				"mobile": 1,
				"tablet": 2,
				"desktop": 3
			},
			"elements": {
				"sectionHeader": {
					"title": "Testimonials",
					"subtitle": "What others say"
				},
				"testimonialCard": {
					"layout": "avatar-name-role-quote",
					"style": "minimal-card",
					"elements": {
						"avatar": "circular-image",
						"name": "reviewer-name",
						"role": "reviewer-position",
						"company": "reviewer-company",
						"quote": "truncated-testimonial"
					}
				}
			}
		}
	},
	"pages": {
		"home": {
			"sections": [
				"navigation",
				"hero",
				"aboutSection",
				"projectsSection",
				"expertiseSection",
				"testimonialsSection"
			]
		},
		"about": {
			"sections": [
				"navigation",
				"heroHeader",
				"workHistory",
				"designProcess",
				"awards",
				"communityWork"
			],
			"specific": {
				"heroHeader": {
					"layout": "centered-text",
					"title": "A creative developer & digital designer",
					"subtitle": "Global collaboration for impactful websites"
				},
				"designProcess": {
					"layout": "numbered-steps",
					"steps": [
						{
							"number": "01",
							"title": "Strategize",
							"description": "Planning and details discussion"
						},
						{
							"number": "02",
							"title": "Wireframe",
							"description": "Ideas to paper"
						},
						{
							"number": "03",
							"title": "Design",
							"description": "Adding visual elements"
						},
						{
							"number": "04",
							"title": "Development",
							"description": "Making it functional"
						},
						{
							"number": "05",
							"title": "Quality Assurance",
							"description": "Optimization and testing"
						}
					]
				},
				"communityWork": {
					"layout": "feature-highlight",
					"elements": {
						"title": "Building a Tech Community",
						"description": "Design & Code community details",
						"stats": {
							"members": "Community Members",
							"events": "Events conducted",
							"years": "Years"
						},
						"cta": "Join Community"
					}
				}
			}
		},
		"projects": {
			"sections": [
				"navigation",
				"projectsHero",
				"projectsFilter",
				"projectsGrid"
			],
			"specific": {
				"projectsHero": {
					"layout": "centered-large-text",
					"title": "My Work",
					"subtitle": "Creating next level digital products",
					"style": "split-character-display"
				},
				"projectsFilter": {
					"type": "tab-navigation",
					"options": ["All", "Development", "Design"]
				},
				"projectsGrid": {
					"layout": "masonry-grid",
					"itemLayout": "title-category-year",
					"projects": [
						{
							"name": "Aora",
							"category": "Development",
							"year": "2024"
						},
						{
							"name": "Code Screenshot",
							"category": "Development & Design",
							"year": "2024"
						}
					]
				}
			}
		}
	},
	"animations": {
		"pageTransitions": {
			"type": "fade-slide",
			"duration": "300ms",
			"easing": "cubic-bezier(0.4, 0, 0.2, 1)"
		},
		"scrollAnimations": {
			"type": "reveal-on-scroll",
			"threshold": 0.1,
			"duration": "600ms"
		},
		"hoverEffects": {
			"cards": "scale-lift",
			"buttons": "scale-glow",
			"links": "underline-expand"
		},
		"textEffects": {
			"glitch": {
				"type": "character-doubling",
				"trigger": "on-load"
			},
			"marquee": {
				"type": "infinite-scroll",
				"speed": "slow-continuous"
			}
		}
	},
	"layout": {
		"maxWidth": "1200px",
		"contentPadding": {
			"mobile": "1rem",
			"tablet": "2rem",
			"desktop": "3rem"
		},
		"sectionSpacing": {
			"mobile": "4rem",
			"tablet": "6rem",
			"desktop": "8rem"
		},
		"gridGaps": {
			"small": "1rem",
			"medium": "2rem",
			"large": "3rem"
		}
	},
	"responsive": {
		"breakpoints": {
			"mobile": "320px",
			"tablet": "768px",
			"desktop": "1024px",
			"wide": "1200px"
		},
		"behavior": {
			"navigation": "hamburger-menu-mobile",
			"hero": "stack-on-mobile",
			"grids": "responsive-columns",
			"text": "responsive-sizing"
		}
	},
	"interactions": {
		"navigation": {
			"scroll": "hide-on-scroll-down",
			"mobile": "slide-out-menu"
		},
		"cards": {
			"hover": "lift-and-glow",
			"click": "subtle-press"
		},
		"buttons": {
			"hover": "scale-with-glow",
			"focus": "outline-visible"
		},
		"images": {
			"loading": "blur-to-clear",
			"hover": "subtle-zoom"
		}
	},
	"accessibility": {
		"contrast": "WCAG-AA-compliant",
		"focusIndicators": "visible-outlines",
		"altText": "descriptive-for-images",
		"keyboardNavigation": "full-support",
		"screenReader": "semantic-markup"
	},
	"performance": {
		"images": {
			"format": "WebP-with-fallback",
			"optimization": "responsive-sizes",
			"loading": "lazy-loading"
		},
		"fonts": {
			"loading": "font-display-swap",
			"preload": "critical-fonts"
		},
		"code": {
			"splitting": "route-based",
			"minification": "enabled"
		}
	},
	"designPrinciples": {
		"visual": {
			"style": "minimal-modern",
			"theme": "dark-primary",
			"emphasis": "typography-focused",
			"whitespace": "generous-spacing"
		},
		"content": {
			"tone": "professional-casual",
			"structure": "scannable-hierarchy",
			"storytelling": "results-focused"
		},
		"interaction": {
			"feedback": "immediate-subtle",
			"transitions": "smooth-purposeful",
			"loading": "progressive-enhancement"
		}
	}
}
